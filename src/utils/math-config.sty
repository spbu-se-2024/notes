% Fix Specific Spacing
\renewcommand*{\mathellipsis}{\mathinner{{\ldotp}\:{\ldotp}\:{\ldotp}}}

\let\@forall\forall
\renewcommand{\forall}{{\thinmuskip=1.5mu \@forall \,}}

\let\@exists\exists
