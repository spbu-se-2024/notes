% Set Operations, Logic, and Arrow-like symbols
\newcommand\symdif{\bigtriangleup}

\newcommand\existu{{\thinmuskip=2.5mu \@exists! \,}}

\newcommand{\imp}{\Rightarrow}
\newcommand{\limp}{\Leftarrow}
\renewcommand{\iff}{\Leftrightarrow}

\newcommand{\ximp}[2][]{\xRightarrow[#1]{#2}}
\newcommand{\xlimp}[2][]{\xLeftarrow[#1]{#2}}
\newcommand{\xiff}[2][]{\xLeftrightarrow[#1]{#2}}

\newcommand{\iffdef}{\xiff{def}}


% Sets
\newcommand{\@N}{\mathbb{N}}
\newcommand{\@@N}{\mathbb{N}_0}
\newcommand{\N}{\@ifstar\@@N\@N}

\newcommand{\Z}{\mathbb{Z}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\I}{\mathbb{I}}
\newcommand{\R}{\mathbb{R}}
\renewcommand{\C}{\mathbb{C}}

\newcommand*{\2}[1]{\mathbbm{2}^#1}


% Paired Delimiters
\DeclarePairedDelimiter\p{(}{)}
