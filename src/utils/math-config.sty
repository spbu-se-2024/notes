\let\@geng\geng
\renewcommand{\geng}{\@ifstar{\@geng}{\@geng*}}

\let\@abs\abs
\renewcommand{\abs}{\@ifstar{\@abs}{\@abs*}}

\let\@norm\norm
\renewcommand{\norm}{\@ifstar{\@norm}{\@norm*}}

\let\@ceil\ceil
\renewcommand{\ceil}{\@ifstar{\@ceil}{\@ceil*}}

\let\@floor\floor
